{
  "name": "v18-bears-team-04",
  "version": "1.0.0",
  "description": "An education management system",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon --exec babel-node server/app.js",
    "test": "nyc  --reporter=html --reporter=text mocha tests/**/*.test.js --timeout 20000 --require @babel/register --exit",
    "eslint:check": "node_modules/eslint/bin/eslint.js \"server/**/*.js\"",
    "prettier:check": "prettier --check \"./server/**/*.js\" && prettier --check \"./tests/**/*.js\"",
    "prettier:fix": "prettier --write \"./server/**/*.js\" && prettier --write \"./tests/**/*.js\"",
    "check:lint-prettier": "npm run eslint:check && npm run prettier:check",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "check:coverage": "nyc check-coverage --lines 90",
    "posttest": "npm run check:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chingu-voyages/v18-bears-team-04.git"
  },
  "author": "v18-bears-team-04",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chingu-voyages/v18-bears-team-04/issues"
  },
  "homepage": "https://github.com/chingu-voyages/v18-bears-team-04#readme",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  }
}
